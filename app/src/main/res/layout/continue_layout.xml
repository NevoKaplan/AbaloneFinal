<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/continue_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="4dp"
    android:background="@drawable/gradient_background_variation"
    tools:context=".play.ContinueActivity">

    <ImageView
        android:id="@+id/continueOld"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/continue_picture" />

    <ImageView
        android:id="@+id/newGame"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/continueOld"
        app:layout_constraintStart_toStartOf="@+id/continueOld"
        app:layout_constraintTop_toBottomOf="@+id/continueOld"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/new_game_picture" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="ð•Žð•–ð•ð•”ð• ð•žð•– ð•‹ð•  ð”¸ð•“ð•’ð•ð• ð•Ÿð•–"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu" />
</androidx.constraintlayout.widget.ConstraintLayout>